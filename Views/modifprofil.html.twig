{% extends "index.html.twig" %}

{% block section %}
 <h1>Modifier le Profil :</h1>
  
   <form method="post" onsubmit="return validation()" action="index.php" class="well" enctype="multipart/form-data">
                    <fieldsetclass="form-group">

      <div class="row">
        <div class="col">
        {% for info in infos %}
        <input type="text" id="Nom" class="form-control" name="Nom" required placeholder="*Nom" value="{{info.nom}}">
        </div>
        <div class="col">
        <input type="text" id="Prenom" class="form-control" name="Prenom" required placeholder="*Prénom" value="{{info.prenom}}">
        </div>
      </div>
      <div class="row">
        <div class="col">
        <input type="text" id="Mail" class="form-control" name="Mail" required placeholder="*Email finissant en iut-tlse3.fr !" pattern=".+iut-tlse3.fr" value="{{info.mail}}">
      </div>
      <div class="row">
        <div class="col">
        <input id="Identifiant_IUT" type="text" class="form-control" name="Identifiant_IUT" required placeholder="*Identifiant IUT" value="{{info.idiut}}">
        </div>
      </div>
      <div class="row h-25">
        <div class="col">
         
        <img class="img-fluid w-50" src="{{info.imageprofil}}" alt="image de {{info.prenom}} {{info.nom}}">
       
        <label for="img-fluid">Ancienne Image</label>
        <br>
          <label for="Imageprofil">Déposez votre Image ici</label>
          
        <input type="hidden" id="Imageprofil" class="form-control" name="Imageprofil" value="{{info.imageprofil}}">
        
          <input type="file" id="newimageprofil" class="form-control" name="Imageprofil" placeholder ="*Image profil" accept="image/png, image/jpeg" />
        </div>
      </div>
      <div class="row">
        <div class="col">
        <input id="passwd" type="password" class="form-control" name="Mot_de_passe"  placeholder="*Mot de passe" style="min-width:100%">
        </div>
      </div>
      <div class="row">
        <div class="col">
        <input id="confirm_passwd" type="password" class="form-control" name="confirm_passwd"  placeholder="*Confirmer le mot de passe" onkeyup="validate_password()">
        </div>
      </div>
      {% endfor %}
        <span id="wrong_pass_alert"></span>
        <div id="formoptions" class="d-flex justify-content-between">

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" onclick="showpass()" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault"> Afficher le mot de passe </label>
                        </div>
                        <input type="hidden" name="Id_Utilisateur" value="{{idutil}}"/>
                        <input type="submit" id="b" class="btn btn-primary create" name="valider_modifprofil" onclick="wrong_pass_alert_modif()" value="Modifier le projet"/>
   </fieldset>
   </form>
{% endblock %} 
