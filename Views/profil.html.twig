{% extends "index.html.twig" %}

{% block section %}
<h1>Profil</h1>
<div class="container d-flex pb-5 justify-content-between" id="infosperso">
        <div class="box">
            <h2>Informations personelles</h3>
            {% for info in infos %}
            <p>Nom : {{info.nom}}</p>
            <p>Pr√©nom : {{info.prenom}}</p>
            <p>Email : {{info.mail}}</p>
            <p>Identifiant IUT : {{info.idiut}}</p>
            <a href="?action=modifprofil" class="btn btn-primary create">Modifier le profil</a> 
        </div>
        <div class="d-flex flex-column box">
            <img style="width: 200px;height: 200px; border-radius:200px;object-fit:cover" src="{{info.imageprofil}}" alt="photo de {{info.prenom}} {{info.nom}}">
            <a>Modifier la photo de profil</a>
        </div>
</div>
{% endfor %}
<div class="container" id="mesprojets">
    <div id="projetstop" class="d-flex justify-content-between pb-3">
        <h2>Vos Projets</h2>
        <a href="?action=ajoutprojet" class="btn btn-primary create">Ajouter un projet</a>  
    </div>
    <div class="row">
    {% for proj in projs %}
    <div class="col-6">
        <div class="card mx-auto" style="width: 18rem;box-shadow: 0px 0px 88.364px 11.046px rgba(0, 0, 0, 0.15); border-radius: 20px;">
                <img src="{{proj.image}}" style="border-radius:20px;" class="card-img-top" alt='image de "{{proj.titre}}"'>
            <div class="card-body">
            {% endfor %}

            {% for ressource in ressources %}
                    <h5 class="card-title">{{ressource.libelle}} {{ressource.nom}}</h5>
            {% endfor %}
                    <p class="card-text">{{proj.titre}}</p>
                 {% for proj in projs %}   
                    <form action="index.php" method="post">
                    <input type="hidden" id="Id_Projet" name="Id_Projet" value="{{proj.idProjet}}">
                    <input type="submit" class="btn btn-info" name="voirprojet" id="voirprojet" value="Voir +"/>
                    <input type="submit" class="btn btn-warning" name="modifprojet" id="modifprojet" value="Modifier le projet"/>
                    <input type="submit" class="btn btn-danger" name="supprojet" id="supprojet" value="Supprimer le projet"/>
                    </form>
            </div>
        </div>
    </div>   
{% endfor %}

</div>

{% endblock %} 