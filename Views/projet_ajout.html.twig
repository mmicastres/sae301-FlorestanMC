{% extends "index.html.twig" %}

{% block section %}

   <form method="post" action="index.php" enctype="multipart/form-data" class="well">

    <fieldsetclass="form-group">
      <div class="row">
        <div class="col">
        <input type="text" id="Titre" class="form-control" name="Titre" required placeholder="*Titre du projet">
        </div>
        <div class="col">
            <select name="Id_Contexte" class="form-control form-control-sm">
                <option value="Choix :"selected hidden disabled >Choisir une Ressource</option>
                {% for ressource in ressources %}
                <option name="Id_Contexte" value="{{ressource.idressource}}">{{ressource.libelle}} - {{ressource.semestre}} - {{ressource.nom}}</option>
                {% endfor %}
            </select>
        </div>
      </div>
    <div class="row">
        <div class="col">
        <input type="text" id="Description" class="form-control" name="Description" required placeholder="*Description du projet">
        </div>
    </div>   
      <div class="row">
        <div class="col">
        <label for="Image">Veuillez déposer votre fichier ici :</label>
        <input type="file" id="Image" class="form-control" name="Image" required placeholder ="*Image" accept="image/png, image/jpeg" />
        </div>
      </div>
      <div class="row">
        <div class="col">
        <input id="Demo" type="text" class="form-control" name="Demo" required placeholder="*Lien vers la démo">
        </div>
      </div>
      <div class="row">
        <div class="col"> 
        <input id="Sources" type="text" class="form-control" name="Sources" required placeholder="*Liens vers les sources" style="min-width:100%">
        </div>
      </div>
      <div class="d-flex">
      {% for utilisateur in utilisateurs %}
      <input class="form-check-input" type="checkbox" name="Contributeurs[]" value="{{utilisateur.idutilisateur}}" id="{{utilisateur.nom}}{{utilisateur.prenom}}">
      <label class="form-check-label" for="flexCheckDefault">{{utilisateur.nom}} {{utilisateur.prenom}}</label>
      {% endfor %}
      </div>
      <div class="d-flex">
      {% for tag in tags %}
      <input class="form-check-input" type="checkbox" name="Tags[]" value="{{tag.idtag}}" id="{{tag.nomtag}}">
      <label class="form-check-label" for="flexCheckDefault">{{tag.nomtag}}</label>
      {% endfor %}
      </div>
      <div class="d-flex">
      {% for categorie in categories %}
      <input class="form-check-input" type="checkbox" name="Categories[]" value="{{categorie.idcategorie}}" id="{{categorie.nomcategorie}}">
      <label class="form-check-label" for="flexCheckDefault">{{categorie.nomcategorie}}</label>
      {% endfor %}
      </div>
    <input type="submit" id="create" class="btn btn-primary" name="valider_addprojet" value="Ajouter le projet"/>
    
   </fieldset>
   </form>

   {% endblock %} 